    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Webots (Linux)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "LD_LIBRARY_PATH": "$LD_LIBRARY_PATH:/usr/local/webots/lib/controller",
                "PYTHONPATH": "/usr/local/webots/lib/controller/python37",
            },
        }
    ]
}